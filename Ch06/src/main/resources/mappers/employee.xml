<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch06.persistence.EmployeeDao">

	<insert id="insertEmployee">
		INSERT INTO `Employee` VALUES (#{uid}, #{name}, #{gender}, #{hp}, #{email}, #{pos}, #{dep}, NOW());
	</insert>
	
	<select id="selectEmployee" resultType="kr.co.ch06.vo.EmployeeVo">
		SELECT * FROM `Employee` WHERE `uid` = #{uid};
	</select>
	
	<select id="selectEmployees" resultType="kr.co.ch06.vo.EmployeeVo">
		SELECT * FROM `Employee`;
	</select>
	
	<update id="updateEmployee">
		UPDATE `Employee` SET
			`name` = #{name},
			`gender` = #{gender},
			`hp` = #{hp},
			`email` = #{email},
			`pos` = #{pos},
			`dep` = #{dep}
		WHERE
			`uid` = #{uid};
	</update>
	
	<delete id="deleteEmployee">
		DELETE FROM `Employee` WHERE `uid` = #{uid};
	</delete>


</mapper>