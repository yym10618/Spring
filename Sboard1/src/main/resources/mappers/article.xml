<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sboard1.dao.ArticleDao">

	<insert id="insertArticle" useGeneratedKeys="true" keyProperty="no"> <!-- insert됐을때 해당 컬럼값이 리턴 -->
		INSERT INTO `Board_article` SET
			`title` = #{title},
			`content` = #{content},
			`uid` = #{uid},
			`regip` = #{regip},
			`rdate` = NOW();
	</insert>
	<insert id="insertFile">
		INSERT INTO `Board_file` SET
			`parent` = #{parent},
			`oName` = #{oName},
			`nName` = #{nName},
			`rdate` = NOW();
	</insert>
	<select id="selectArticle" resultType="kr.co.sboard1.vo.ArticleVo"></select>
	<select id="selectArticles" resultType="kr.co.sboard1.vo.ArticleVo">
		SELECT a.*, b.`nick` FROM `Board_article` AS a 
			JOIN `Board_user` AS b
			ON a.uid = b.uid
			WHERE a.parent = 0
			ORDER BY `no` DESC
			LIMIT #{start}, 10;
	</select>
	
	<select id="selectCountTotal" resultType="int">
		SELECT COUNT(`no`) FROM `Board_article` WHERE `parent`=0;
	
	
	</select>
	
	
	<update id="updateArticle"></update>
	<delete id="deleteArticle"></delete>

</mapper>