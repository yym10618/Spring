<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sboard1.dao.UserDao">

	<insert id="insertUser">
		INSERT INTO `Board_user` SET
			`uid` = #{uid},
			`pass` = PASSWORD(#{pass}),
			`name` = #{name},
			`nick` = #{nick},
			`email` = #{email},
			`hp` = #{hp},
			`zip` = #{zip},
			`addr1` = #{addr1},
			`addr2` = #{addr2},
			`regip` = #{regip},
			`rdate` = NOW();
	</insert>
	<select id="selectTerms" resultType="kr.co.sboard1.vo.TermsVo">
		SELECT * FROM `Board_terms`;
	</select>
	<select id="selectUser" resultType="kr.co.sboard1.vo.UserVo">
		SELECT * FROM `Board_user` WHERE `uid` = #{uid} AND `pass`= PASSWORD(#{pass});
	</select>
	<select id="selectUsers" resultType="kr.co.sboard1.vo.UserVo">
		SELECT * FROM `Board_user`;
	</select>
	<update id="updateUser">
		UPDATE `Board_user` SET
	</update>
	<delete id="deleteUser">
		DELETE FROM `Board_user` WHERE `uid` = #{uid};
	</delete>

</mapper>