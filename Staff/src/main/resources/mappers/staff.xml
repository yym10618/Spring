<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.staff.persistence.StaffDao">

	<insert id="insertStaff">
		INSERT INTO `Staff` VALUES (#{stf_no}, #{stf_name}, #{stf_birth}, #{stf_gender}, #{stf_hp}, #{stf_addr}, #{stf_date});
	</insert>
	
	<select id="selectStaff" resultType="kr.co.staff.vo.StaffVo">
		SELECT * FROM `Staff` WHERE `stf_no`= #{stf_no};
	</select>
	
	<select id="selectStaffs" resultType="kr.co.staff.vo.StaffVo">
		SELECT * FROM `Staff`;
	</select>
	
	<update id="updateStaff">
		UPDATE `Staff` SET
			`stf_name` = #{stf_name},
			`stf_birth` = #{stf_birth},
			`stf_gender` = #{stf_gender},
			`stf_hp` = #{stf_hp},
			`stf_addr` = #{stf_addr},
			`stf_date` = #{stf_date}
		WHERE
			`stf_no` = #{stf_no};
	</update>
	
	<delete id="deleteStaff">
		DELETE FROM `Staff` WHERE `stf_no` = #{stf_no};
	</delete>

</mapper>

